<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:layout_margin="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/item_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_name"
        app:layout_constraintEnd_toStartOf="@id/item_desc"
        android:layout_marginHorizontal="12dp" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chris"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_iv"
        app:layout_constraintStart_toStartOf="@id/item_iv"
        app:layout_constraintTop_toBottomOf="@id/item_iv" />

    <TextView
        android:id="@+id/item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        android:maxLines="3"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:text="i am a asadf dsfda dsff safsi iidssf sii
iposiw wja vak kks skw i sdfsafa idsd isi cn sis kkda asfk
food with i iiok ssdfd kw ii w32 as."
        app:layout_constraintStart_toEndOf="@id/item_iv"
        app:layout_constraintTop_toTopOf="@+id/item_iv"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>